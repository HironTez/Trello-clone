{
    "source": {
        "includePattern": ".+\\.ts|js(doc|x)?$",
        "include": ["./src/"],
        "exclude": ["node_modules"]
    },
    "recurseDepth": 10,                 
    "opts": {
        "destination": "./jsdoc/",
        "recurse": true
    }
}

